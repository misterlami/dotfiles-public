[
    /**
    * Miscellany (moi)
    **/
    {
        "key": "cmd+.",
        "command": "workbench.action.nextSideBarView"
    },
    {
        "key": "cmd+shift+.",
        "command": "workbench.action.previousSideBarView"
    },
    {
        "key": "cmd+shift+backspace",
        "command": "editor.action.deleteLines",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+k cmd+t",
        "command": "smartTitleCase.apply",
        "when": "editorHasSelection"
    },

    /**
    * Toggle Font Size
    **/
    {
        "key": "cmd+k cmd+k",
        "command": "toggle",
        "when": "editorTextFocus",
        "args": {
            "id": "fontSize",
            "value": [
                {
                    "editor.fontSize": 15,
                    "editor.lineHeight": 32
                },
                {
                    "editor.fontSize": 15,
                    "editor.lineHeight": 0
                }
            ]
        }
    },

    /**
    * Toggle Font Family
    **/
    {
        "key": "cmd+k cmd+f",
        "command": "toggle",
        "when": "editorTextFocus",
        "args": {
            "id": "fontFamily",
            "value": [
                {
                    "editor.fontFamily": "hasklig"
                },
                {
                    "editor.fontFamily": "jetbrains mono"
                }
            ]
        }
    },

    /**
    * Panels
    **/
    {
        "key": "cmd+k cmd+a",
        "command": "workbench.action.toggleActivityBarVisibility"
    },
    {
        "key": "cmd+k cmd+e",
        "command": "workbench.view.explorer"
    },
    {
        "key": "cmd+k cmd+g",
        "command": "workbench.view.scm"
    },
    {
        "key": "cmd+k cmd+d",
        "command": "workbench.view.debug"
    },
    {
        "key": "cmd+k cmd+x",
        "command": "workbench.extensions.action.showEnabledExtensions"
    },
    {
        "key": "cmd+k cmd+b",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "cmd+e",
        "command": "workbench.action.focusActiveEditorGroup"
    },
    {
        "key": "cmd+t",
        "command": "workbench.action.terminal.toggleTerminal"
    },

    /**
    * File Explorer
    **/
    {
        "key": "cmd+d",
        "command": "duplicate.execute",
        "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !inputFocus"
    },
    {
        "key": "cmd+n",
        "command": "explorer.newFile",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "shift+cmd+n",
        "command": "explorer.newFolder",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        "key": "cmd+r",
        "command": "workbench.files.action.refreshFilesExplorer",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },

    /**
    * Fold/Unfold
    **/
    {
        "key": "cmd+ctrl+[", // "shift+cmd+["
        "command": "editor.fold",
        "when": "editorFocus"
    },
    {
        "key": "cmd+ctrl+]", // "shift+cmd+]"
        "command": "editor.unfold",
        "when": "editorFocus"
    },

    /**
    * Line Manipulation
    **/
    {
        "key": "cmd+l",
        "command": "editor.action.copyLinesDownAction",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+j",
        "command": "editor.action.joinLines",
        "when": "editorTextFocus"
    },


    /**
    * Multi-Cursor
    **/
    {
        "key": "cmd+backspace",
        "command": "editor.action.moveSelectionToPreviousFindMatch",
        "when": "editorFocus && editorHasMultipleSelections"
    },
    {
        "key": "cmd+k cmd+d",
        "command": "editor.action.moveSelectionToNextFindMatch",
        "when": "editorFocus && editorHasMultipleSelections"
    },
    {
        "key": "cmd+right", /* same as cmd+shift+l sublime key binding */
        "command": "editor.action.insertCursorAtEndOfEachLineSelected",
        "when": "editorFocus && editorHasSelection"
    },

    /**
    * Emmet (HTML editing)
    **/
    {
        "key": "cmd+m cmd+i",
        "command": "editor.emmet.action.balanceIn",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+m cmd+o",
        "command": "editor.emmet.action.balanceOut",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+m cmd+w",
        "command": "editor.emmet.action.wrapWithAbbreviation",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+m cmd+m",
        "command": "editor.emmet.action.matchTag",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+m cmd+e",
        "command": "editor.action.smartSelect.expand",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+m cmd+r",
        "command": "editor.emmet.action.updateTag",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+m cmd+backspace",
        "command": "editor.emmet.action.removeTag",
        "when": "editorTextFocus"
    },


    /**
    * Split Panels
    **/
    {
        "key": "ctrl+n",
        "command": "workbench.action.splitEditor",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+w",
        "command": "workbench.action.joinAllGroups",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+=",
        "command": "workbench.action.increaseViewSize",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+-",
        "command": "workbench.action.decreaseViewSize",
        "when": "editorFocus"
    },

    /**
    * Terminal Split Panel
    **/
    {
        "key": "ctrl+n",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+w",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },

    /**
    * Easily search for Liverwire files
    **/
    {
        "key": "cmd+k cmd+l",
        "command": "workbench.action.quickOpen",
        "args": "⚡︎",
        "when": "!editorHasSelection"
    },
    {
        "key": "cmd+k cmd+s",
        "command": "editor.action.insertSnippet"
    }
]
